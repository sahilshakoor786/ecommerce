<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NootropicsForBrain</title>
    <link rel="stylesheet" href="//localhost:3000/index.css">
   <script src='//localhost:3000/scripts/icon.js' ></script>
   <script defer src='//localhost:3000/scripts/product.js' ></script>
<script defer src='//localhost:3000/scripts/bar.js' ></script>
<script defer src='//localhost:3000/scripts/cartbtn.js' ></script>
<script defer src="//localhost:3000/scripts/basic.js"></script>

<script defer src="//localhost:3000/scripts/p.js"></script>
<link rel="stylesheet" href="//localhost:3000/styles/product.css">
</head>
<body>
    <div id="sidebar">
        <div id="sideitem">All categories</div>
        <div id="sideitem">Modafinil</div>
        <div id="sideitem">Citicoline/CDP-Choline</div>
        
        
           </div>
    <div id="nav">
        <i class="fas fa-bars" id="bars"></i>
        <img src="//localhost:3000/favicon.ico" id="navimg" alt="">
<h1 id="title">NootropicsForBrain</h1>

<div id="bar">
 
<input type="text" placeholder="Search...." id="search">
<i class="fas fa-search" id="sico"></i>
<i class="fas fa-user-circle" id="user" style="font-size: 20px;color:white"></i>
<i class="fas fa-shopping-basket" id="user" style="font-size: 20px;color:white"></i>
</div>
    </div>
<div id="mainsa">
<div id="productimg">
<img src="//localhost:3000/products/<%=item.productid%>/main.png" alt="" id="pimg">
</div>
<div id="ppname">
    <h2 id="productname"> <%=item.name%> </h2>
    <div id="assa">
          <div class="mdetails" id="sp"><h3 id="productprice">$ <%= item.selling_price %></h3> </div>
  <div class="mdetails" id="cp">Original Price : <strike>$<%= item.original_price %></strike></div>
  <div class="mdetails" id="discount">Discount : <%= (((item.original_price-item.selling_price)/item.original_price)*100).toFixed(2) %>%</div>
  <div class="mdetails" id="shippingfee">Shipping fee : $30 (not included)</div>
  <div id="qtty">
      Quantity:
      <select name="quantity" id="qty">
    <option value="1">1   </option>
    <option value="2">2</option>
    <option value="3">3</option>
<option value="4">4</option>
<option value="5">5</option>
<option value="6">6</option>
<option value="7">7</option>
<option value="8">8</option>
<option value="9">9</option>
<option value="10">10</option>
 
</select>
  </div>

    </div>

  <div id='adsa'>NootropicsForBrain <img src="//localhost:3000/checked.png" id="chck" alt="" srcset=""></div>
    <div id="btns">
<button id="buybtn" type="submit">Buy Now</button>
<button id="cartbtn" type="submit">Add to cart</button>

    </div>
</div>
<div id="productothr">
    <div id="lefup">
            <img src="//localhost:3000/products/<%=item.productid%>/main.png" alt="" id="othrimg">
    <img src="//localhost:3000/products/<%=item.productid%>/1.png" alt="" id="othrimg">
    <img src="//localhost:3000/products/<%=item.productid%>/2.png" alt="" id="othrimg">
    <img src="//localhost:3000/products/<%=item.productid%>/3.png" alt="" id="othrimg">
    </div>
<div id="sideeffect">
<h2 id="sideef">Side effects :</h2>
<div class="scrollable">
    <% var as = item.side_effects.split("^") %>
    <% as.forEach(item=>{ %>
        <div class="te"> <%= item %> </div>
        <% })%>
</div>

</div>
</div>
<div id="pdiscription">
    <h2 id="sideef">Description : </h2>
    <div id="desad" class="scrollable">
        <% if(item.description.includes('^')){var as = item.description.split("^") %>
    <% as.forEach(item=>{ %>
        <div class="te"> <%= item %> </div>
        <% })} else {%>
            <div class="te"> <%= item.description %> </div>  
            <% }%>
    </div>
</div>
<div id="reviews" id="rev">
    <div id="revhead">FAQs </div>
    <div class="scrollable">
           <% var as = item.faqs.split("^") %>
    <% as.forEach(item=>{ %>
        <div class="te"> <%= item %> </div>
        <% })%>
    </div>
 
</div>
<div id="previews">
    <div id="revhead" style="border-bottom: 2px solid grey;">Reviews</div>
</div>
</div>
</body>
</html>